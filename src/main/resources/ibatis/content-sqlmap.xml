<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
 	"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap> 
	<typeAlias alias="ContentDO" type="com.ziqi.myweb.dal.model.ContentDO"/> 
	<select id="ContentDAO.select" resultClass="ContentDO" parameterClass="java.util.HashMap"> 
		select * from content where is_deleted = 0 
		<dynamic prepend="and"> 
			<isNotNull property="id" prepend="and">
				<![CDATA[ id = #id# ]]>
			</isNotNull>
			<isNotNull property="feature" prepend="and">
				<![CDATA[ feature = #feature# ]]>
			</isNotNull>
			<isNotNull property="options" prepend="and">
				<![CDATA[ options = #options# ]]>
			</isNotNull>
			<isNotNull property="version" prepend="and">
				<![CDATA[ version = #version# ]]>
			</isNotNull>
			<isNotEmpty property="fromCreate" prepend="and">
				<![CDATA[ gmt_create > #fromCreate# ]]>
			</isNotEmpty>
			<isNotEmpty property="toCreate" prepend="and">
				<![CDATA[ gmt_create < #toCreate# ]]>
			</isNotEmpty>
			<isNotEmpty property="fromModified" prepend="and">
				<![CDATA[ gmt_modified > #fromModified# ]]>
			</isNotEmpty>
			<isNotEmpty property="toModified" prepend="and">
				<![CDATA[ gmt_modified < #toModified# ]]>
			</isNotEmpty>
			<isNotEmpty property="orderField">
				<![CDATA[ order by $orderField$ ]]>
			</isNotEmpty>
			<isNotEmpty property="groupField">
				<![CDATA[ group by $groupField$ ]]>
			</isNotEmpty>
		</dynamic> 
		limit #start#,#limit#
	</select> 
	<select id="ContentDAO.selectById" resultClass="ContentDO" parameterClass="int"> 
		select * from content where 
		is_deleted = 0 and id = #id# limit 1 
	</select> 
	<select id="ContentDAO.selectCount" resultClass="int" parameterClass="java.util.HashMap"> 
		select count(id) from content where is_deleted = 0 
		<dynamic prepend="and"> 
			<isNotNull property="id" prepend="and">
				<![CDATA[ id = #id# ]]>
			</isNotNull>
			<isNotNull property="feature" prepend="and">
				<![CDATA[ feature = #feature# ]]>
			</isNotNull>
			<isNotNull property="options" prepend="and">
				<![CDATA[ options = #options# ]]>
			</isNotNull>
			<isNotNull property="version" prepend="and">
				<![CDATA[ version = #version# ]]>
			</isNotNull>
			<isNotEmpty property="fromCreate" prepend="and">
				<![CDATA[ gmt_create > #fromCreate# ]]>
			</isNotEmpty>
			<isNotEmpty property="toCreate" prepend="and">
				<![CDATA[ gmt_create < #toCreate# ]]>
			</isNotEmpty>
			<isNotEmpty property="fromModified" prepend="and">
				<![CDATA[ gmt_modified > #fromModified# ]]>
			</isNotEmpty>
			<isNotEmpty property="toModified" prepend="and">
				<![CDATA[ gmt_modified < #toModified# ]]>
			</isNotEmpty>
		</dynamic> 
	</select> 
	<insert id="ContentDAO.insert" parameterClass="ContentDO"> 
		insert into content 
		(			feature,
			options,
			is_deleted,
			gmt_create,
			gmt_modified,
			version
		)
		VALUES
		(			#feature#,
			#options#,
			0,
			now(),
			now(),
			#version#
		)
		<selectKey resultClass="int" keyProperty="id"> 
			SELECT LAST_INSERT_ID() 
		</selectKey>  
	</insert> 
	<update id="ContentDAO.update" parameterClass="ContentDO"> 
		update content set version = version + 1 and gmt_modified = now()
		<dynamic> 
			<isNotNull property="feature" prepend="and">
				<![CDATA[ feature = #feature# ]]>
			</isNotNull>
			<isNotNull property="options" prepend="and">
				<![CDATA[ options = #options# ]]>
			</isNotNull>
		</dynamic> 
		where id = #id# and version = #version# 
	</update> 
	<delete id="ContentDAO.delete" parameterClass="int"> 
		update content set is_deleted = 1 where id = #id# 
	</delete> 
</sqlMap> 
