	<insert id="ThreadDAO.insert" parameterClass="ThreadDO"> 
		insert into thread 
		(			feature,
			options,
			is_deleted,
			gmt_create,
			gmt_modified,
			version,
			title,
			content_id,
			author_id,
			hit,
			reply_count,
			like_count,
			last_reply_date,
			level,
			tags
		)
		VALUES
		(			#feature#,
			#options#,
			0,
			now(),
			now(),
			#version#,
			#title#,
			#contentId#,
			#authorId#,
