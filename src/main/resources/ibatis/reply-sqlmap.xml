	<insert id="ReplyDAO.insert" parameterClass="ReplyDO">
		insert into reply
		(			feature,
		options,
		is_deleted,
		gmt_create,
		gmt_modified,
		content_path,
		author_id,
		author_account,
		floor,
		thread_id,
		parent_id,
		reply_type,
		reply_count
		)
		VALUES
		(			#feature#,
		#options#,
		0,
		now(),
		now(),
		#contentPath#,
		#authorId#,
		#authorAccount#,
		<isEqual property="replyType" compareValue="0">
			(select reply_count from thread where id = #parentId# for update) + 1,
		</isEqual>
		<isNotEqual property="replyType" compareValue="0">
			0,
		</isNotEqual>
		#threadId#,
		#parentId#,
		#replyType#,
		#replyCount#
		)
		<selectKey resultClass="int" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	<update id="ReplyDAO.updateParent" parameterClass="ReplyDO">
